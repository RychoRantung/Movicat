<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMov"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark1">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="7dp"
        android:padding="2dp"
        app:cardBackgroundColor="@color/dark2">



    <ImageView
        android:id="@+id/imgMov"
        android:layout_width="150dp"
        android:layout_marginRight="100dp"
        android:layout_height="170dp"
        android:src="@color/dark1"/>

        <TextView
            android:id="@+id/movTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="160dp"
            android:layout_toRightOf="@id/imgMov"
            android:text="Judul"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="50dp"
            android:textColor="@color/white"
            android:fontFamily="@font/opensans"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/movRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginStart="160dp"
            android:text="Tgl Rilis"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/movDesc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/imgMov"
            android:textSize="12sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:text="Deskirpsi dari film ini adalah"/>

        <TextView
            android:id="@+id/tapfor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="148dp"
            android:layout_toRightOf="@id/imgMov"
            android:textSize="9sp"
            android:maxLines="2"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:text="Tap for details"/>

    </androidx.cardview.widget.CardView>
</RelativeLayout>